            <li styleclass="Answer" style="margin-left:48px;"><text styleclass="Answer" translate="true">Enter content for the addendum</text></li>
            <li styleclass="Answer" style="margin-left:48px;"><text styleclass="Answer" style="font-weight:normal;" translate="true">Click</text><text styleclass="Answer" style="font-weight:bold;" translate="true"> Save</text></li>
